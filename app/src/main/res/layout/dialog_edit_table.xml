<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/editTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Edit and book a table"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TableTV"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextView"
        android:layout_marginTop="35dp"
        android:text="Table id" />

    <EditText
        android:id="@+id/tabelID2"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/TableTV"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="-9dp"
        android:layout_toRightOf="@id/TableTV"
        android:ems="10"
        android:hint="id"
        android:inputType="number"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/GuestsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TableTV"
        android:layout_marginTop="29dp"
        android:text="Number of people" />

    <TextView
        android:id="@+id/hour_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TableTV"
        android:layout_marginTop="79dp"
        android:text="Hour" />

    <EditText
        android:id="@+id/numberOfGuest2"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/GuestsTV"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-12dp"
        android:layout_toRightOf="@id/GuestsTV"
        android:ems="10"
        android:hint="num"
        android:inputType="number"
        android:textSize="14sp" />

    <Button
        android:id="@+id/hourBtn"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_below="@id/GuestsTV"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="27dp"
        android:background="@color/colorAccent"
        android:text="Choose time"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/editTableBtn2"
        android:layout_width="140dp"
        android:layout_height="36dp"
        android:layout_below="@id/GuestsTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@color/colorAccent"
        android:text="Edit"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/bookTableBtn"
        android:layout_width="394dp"
        android:layout_height="36dp"
        android:layout_below="@id/GuestsTV"
        android:layout_marginTop="118dp"
        android:background="@color/colorAccent"
        android:text="Edit and book"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/hourTextView"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberOfGuest2"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@id/hour_textView"
        />

</RelativeLayout>