<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/editTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="236dp"
        android:layout_marginTop="83dp"
        android:text="@string/edit_edit_and_book_text"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TableTV"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="277dp"
        android:layout_marginTop="32dp"
        android:text="@string/edit_table_id" />

    <EditText
        android:id="@+id/tableID"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/TableTV"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-12dp"
        android:layout_toRightOf="@id/TableTV"
        android:ems="10"
        android:hint="@string/edit_table_id_hint"
        android:inputType="number"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/GuestsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TableTV"
        android:layout_alignParentStart="true"
        android:layout_marginStart="256dp"
        android:layout_marginTop="25dp"
        android:text="@string/edit_number_of_people" />

    <TextView
        android:id="@+id/hour_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TableTV"
        android:layout_alignParentStart="true"
        android:layout_marginStart="241dp"
        android:layout_marginTop="72dp"
        android:text="@string/edit_hour" />

    <EditText
        android:id="@+id/tableSize"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/GuestsTV"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-12dp"
        android:layout_toRightOf="@id/GuestsTV"
        android:ems="10"
        android:hint="@string/edit_number_of_people_hint"
        android:inputType="number"
        android:textSize="14sp" />

    <Button
        android:id="@+id/hourBtn"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_below="@id/GuestsTV"
        android:layout_alignStart="@+id/hour_textView"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:text="@string/edit_choose_time"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/editTableBtn2"
        android:layout_width="140dp"
        android:layout_height="36dp"
        android:layout_below="@id/GuestsTV"
        android:layout_alignParentStart="true"
        android:layout_marginStart="292dp"
        android:layout_marginTop="68dp"
        android:background="@color/colorAccent"
        android:text="@string/edit_edit_button"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/bookTableBtn"
        android:layout_width="394dp"
        android:layout_height="36dp"
        android:layout_below="@id/GuestsTV"
        android:layout_alignParentStart="true"
        android:layout_marginStart="159dp"
        android:layout_marginTop="111dp"
        android:background="@color/colorAccent"
        android:text="@string/edit_edit_and_book"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/hourTextView"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tableSize"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/hour_textView" />

</RelativeLayout>